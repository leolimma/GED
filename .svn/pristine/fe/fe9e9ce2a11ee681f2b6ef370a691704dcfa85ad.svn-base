body{
    //background: #cccccc;
    background-color: #dfdfdf;
}

img{
    border: 0px;
}

#container{
    width: 100%;
    height: 100%;
    margin: 0;
}

#logotipo{
    background-color: #ccc;
    padding: 10px;
    border-bottom: 1px solid darkgray;
}

#titulo{
    position: absolute;
    float: left;
    font-size: 25pt;
    font-variant: small-caps;
    font-weight: bold;
    margin-left: 10px;
    margin-top: 25px;
}

#barra_menu{
    min-height: 25px;
    padding: 3px;
    clear: both;
    padding-top: 0px;
}

#corpo{
    margin-top: 10px;
    margin-bottom: 10px;
    min-height: 300px;
}

#rodape{
    position: absolute;
    bottom: 0;
    width: 100%;
    padding: 10px;
    text-align: center;
    background-color: #ccc;
    //padding: 10px;
    border-top: 1px solid darkgray;
    //background-color: silver;
}

#panelLogin{
    border: 1px solid black;
    width: 450px;
    height: 250px;
    border-radius: 15px;
    background-color: whitesmoke;
}

#panelLogin img{
    float: left;
    margin-top: 10px;
    margin-left: 30px;
    margin-right: -30px;
}

#panelLogin hr{
    margin-bottom: 5px;
}

#panelLogin table td{
    padding: 5px;
}

#panelLogin h1{
    font-variant: small-caps;
}