body{
    //background: #cccccc;
    background-color: #dfdfdf;
}

img{
    border: 0px;
}

#container{
    width: 100%;
    height: 100%;
    margin: 0;
}

#logotipo{
    background-color: #ccc;
    padding: 10px;
    border-bottom: 1px solid darkgray;
}

#titulo{
    position: absolute;
/*    float: left;*/
    font-size: 25pt;
    font-variant: small-caps;
    font-weight: bold;
/*    margin-left: 10px;
    margin-top: 25px;*/
    width: 100%;
    text-align: center;
    margin-top: 1%;
}

#usuario_informacoes{
    /*    position: absolute;
        float: right;
        top: 20px;
        right: 10px;
        font-size: 15pt;
        font-variant: small-caps;
        font-weight: bold;
        text-align: center;*/
    position: absolute;
    float: right;
    top: 0;
    right: 0;
    padding-left: 10px;
    color: #fff;
    font-size: 9pt;
    border-bottom-left-radius: 10px;
    background-color: rgb(0,53,134);
}

#sair{
    display: inline-block;
    height: 100%;
    margin-left: 10px;
    padding: 0 10px;
    border-left: 1px solid #dfdfdf;
}

#sair span{
    color: #fff;
    font-size: 8pt;
}

#sair:hover{
    background-color: #4682B4;
}

#sair img{
    padding: 4px 0px;
    width: 15px;
}

#barra_menu{
    min-height: 25px;
    padding: 3px;
    clear: both;
    padding-top: 0px;
}

#corpo{
/*    margin-top: 10px;*/
    margin-bottom: 10px;
    min-height: 300px;
}

#rodape{
    position: absolute;
    bottom: 0;
    width: 100%;
    padding: 10px;
    text-align: center;
    background-color: #ccc;
    //padding: 10px;
    border-top: 1px solid darkgray;
    //background-color: silver;
}

#panelLogin{
    border: 1px solid black;
    width: 450px;
    height: 250px;
    border-radius: 15px;
    background-color: whitesmoke;
}

#panelLogin img{
    float: left;
    margin-top: 10px;
    margin-left: 30px;
    margin-right: -30px;
}

#panelLogin hr{
    margin-bottom: 5px;
}

#panelLogin table td{
    padding: 5px;
}

#panelLogin h1{
    font-variant: small-caps;
}

#categorias{
    float: left;
    max-height: 340px;
    max-width: 300px;
    overflow: auto;
}

#listagem{
    float: right;
    width: 75%;
    margin-right: 15px;
    max-height: 340px;
    overflow-y: auto;
}

#enviaDocumento_dados{
    float: left;
    width: 50%;
}

#enviaDocumento_arquivo{
    margin-right: 2%;
    float: right;
    width: 48%;
}

#metadados{
    float: left;
    max-height: 340px;
    max-width: 300px;
    overflow: auto;
}

div#carregando{
    position: fixed;
    z-index: 2;
    bottom: 66px;
    margin-left: 10px;
}